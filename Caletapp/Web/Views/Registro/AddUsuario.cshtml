@using Services.Dtos;
@{
    ViewData["Title"] = "Registro de Usuario";
    Layout = null;
}
@model RegistroModel;

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Registro</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Registro.css" />
</head>
<body>
    <div class="registro-container">
        <h2>Registro</h2>
        <form asp-action="AddUsuario" method="post">
            <div class="row">
                <div class="col-md-6">
                    <label>Nombres</label>
                    <input asp-for="Nombres" class="form-control" placeholder="Diligenciar nombres" />
                </div>
                <div class="col-md-6">
                    <label>Apellidos</label>
                    <input asp-for="Apellidos" class="form-control" placeholder="Diligenciar apellidos" />
                </div>
                <div class="col-md-6">
                    <label>Nombre de usuario</label>
                    <input asp-for="NombreUsuario" class="form-control" placeholder="Diligenciar nombre de usuario" />
                </div>
                <div class="col-md-6">
                    <label>Correo electrónico</label>
                    <input asp-for="CorreoElectronico" class="form-control" placeholder="Diligenciar correo" />
                </div>
                <div class="col-md-6">
                    <label>Contraseña</label>
                    <input asp-for="Contrasena" class="form-control" type="password" placeholder="Diligenciar contraseña" />
                </div>
                <div class="col-md-6">
                    <label>Confirmar contraseña</label>
                    <input asp-for="ConfirmarContrasena" class="form-control" type="password" placeholder="Confirmar contraseña" />
                </div>
            </div>
            <button type="submit" class="btn btn-registrar">Registrarse</button>
            <a href="/Login/GetLogin" class="enlace-regresar">Regresar</a>
        </form>
    </div>
</body>
</html>